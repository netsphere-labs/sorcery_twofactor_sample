<%= form_with(model: user) do |form| %>
  <% if user.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(user.errors.count, "error") %> prohibited this user from being saved:</h2>

      <ul>
        <% user.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="row mb-3">
    <%= form.label :email, class:"col-sm-2 col-form-label" %>
    <div class="col-sm-10">
      <%= form.text_field :email, class:"form-control" %>
    </div>
  </div>

  <div class="row mb-3">
    <%= form.label :password, class:"col-sm-2 col-form-label" %>
    <div class="col-sm-10">
      <%= form.password_field :password,
                              value: user.password, class:"form-control" %>
    </div>
  </div>
  <div class="row mb-3">
    <%= form.label :password_confirmation, class:"col-sm-2 col-form-label" %>
    <div class="col-sm-10">
      <%= form.password_field :password_confirmation,
                    value: user.password_confirmation, class:"form-control" %>
    </div>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
